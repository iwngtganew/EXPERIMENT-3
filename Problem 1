#include <iostream>
#include <iomanip>

using namespace std;

int main()
{
	int i, j, k;
	float arr[10], sum, ave;
	
	cout << "Enter 10 Integers : \n" << "\n";
	cin  >> arr[10];
	
	for (i=1; i<10; i++)
	{ 
	  arr[i]=0.0;
	}
	for (i=1; i<10; i++)
	{ 
	  cin >> arr[i];
	}
	

	sum = 0;
	for (i=0; i<=10; i++)
	{ 
	  sum = sum + arr[i];
	  ave = sum/10;
	}	
   
    
  for (i = 0; i < 10; i++)
	{
	    for (j = i + 1; j < 10; j++)
	    {
	        if (arr[i] > arr[j])
	        {
	            k = arr[i];
	            arr[i] = arr[j];
	            arr[j] = k;
	        }
	    }
	}
	
  cout << "\n";
  cout << "The Smallest Integer is : " << arr[1] << "\n" << "\n";
  cout << "The Largest Integer is : " << k << "\n" << "\n";
	cout << "The Average of Your Integers is : " << ave;
	
	
	return 0;
}
