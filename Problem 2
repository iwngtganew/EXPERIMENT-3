#include <iostream>
#include <iomanip>

using namespace std;

int main()
{
  int i, j, k, l, m, n, x;
	float A[7], B[7], C[7];
	
	
	cout << "Enter Temperatures Of Province A For A Week : \n" << "\n";
	for (i=1; i<=7; i++)
	{
	cout << "Provinve A, Day " << i << " : "; 
	cin  >> A[i];
    }
	cout << "\n";
	
	
	cout << "Enter Temperatures Of Province B For A Week : \n" << "\n";
	for (k=1; k<=7; k++)
	{
	cout << "Province B, Day " << k << " : "; 
	cin  >> B[k];
    }
    cout << "\n";
    	
    
    cout << "Enter Temperatures Of Province C For A Week : \n" << "\n";
	for (m=1; m<=7; m++)
	{
	cout << "Province C, Day " << m << " : "; 
	cin  >> C[m];
    }
    cout << "\n";
    
    
    cout << "These Are The Temperatures For the Week In Every Province : " << "\n" << "\n";
    
    
	i=j;
    for (j=1; j<=7; j++)
	{
	cout << "Province A, Day " << j << " : " << A[j] << "\n";
    }
    
    
  k=l;
    for (l=1; l<=7; l++)
	{
	cout << "Province B, Day " << l << " : " << B[l] << "\n";
    }
	
	
	m=n;
    for (n=1; n<=7; n++)
	{
	cout << "Province C, Day " << n << " : " << C[n] << "\n";
    }
    
    
	return 0;
}
